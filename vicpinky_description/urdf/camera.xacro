<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:arg name="namespace" default=""/>
    <xacro:property name="prefix" value="$(arg namespace)"/>
    <xacro:arg name="use_gazebo" default="true"/>

  <gazebo reference="${prefix}camera_link">
    <sensor name="camera" type="rgbd_camera">
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.2</near>
          <far>8.0</far>
        </clip>
        <depth_camera>
          <clip>
            <near>0.2</near>
            <far>8.0</far>
          </clip>
        </depth_camera>
        <optical_frame_id>${prefix}camera_rgb_optical_frame</optical_frame_id>
      </camera>
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>true</visualize>
      <topic>camera</topic>
      <gz_frame_id>${prefix}camera_link</gz_frame_id>
    </sensor>
  </gazebo>
</robot>